<div class="container">
  <%= render 'shared/index_action_bar',
        title: 'Contacts',
        new_object_path: new_contact_path %>

  <table class="table table-striped">
    <thead>
      <tr>
                  <th>Name</th>
                  <th>Email</th>
                <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @contacts.each do |contact| %>
    <tr>
              <td>
          <p>
            <%= contact.name %>
          </p>
        </td>
              <td>
          <p>
            <%= contact.email %>
          </p>
        </td>
      
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Actions <span class="caret"></span>
          </button>

          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Show', contact %></li>
            <li><%= link_to 'Edit', edit_contact_path(contact) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>